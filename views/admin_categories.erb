<div class="container">
  <div class="row">
    <%= erb :admin_menu %>

    <div class="col-md-9">
      <h2>CategorieÃ«n</h2>
      <hr/>
      <%= flash_tag %>
      <table class="table">
        <thead>
        <tr>
          <th>Naam</th>
          <th># Producten</th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td class="col-md-2"><%= category.products.count %></td>
              <td class="col-md-1">
                <a href="/admin/categorie/<%= category.id %>/edit" class="btn btn-warning btn-xs">Edit</a></td>
              <td class="col-md-1">
                <a href="/admin/categorie/<%= category.id %>/delete" class="btn btn-danger btn-xs">Delete</a></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <h2>Nieuw</h2>
      <hr/>
      <form class="form-horizontal" action="/admin/categorie" method="POST">
        <div class="form-group">
          <label class="col-md-2 control-label" for="name">Naam</label>
          <div class="col-md-6">
            <input type="text" name="name" id="name" class="form-control"/>
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Aanmaken"/>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>